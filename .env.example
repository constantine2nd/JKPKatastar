# Database Configuration
# Option 1: MongoDB Atlas (Cloud) - Recommended for production
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/database_name?retryWrites=true&w=majority

# Option 2: Local MongoDB (Docker) - For local development
# MONGO_URI=mongodb://admin:password123@mongodb:27017/jkp_katastar?authSource=admin
# MONGO_PASSWORD=password123

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration (for notifications)
EMAIL_SERVICE=Gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USER=your_email@gmail.com
EMAIL_SECRET=your_gmail_app_password

# Client Configuration
CLIENT_HOST_URI=http://localhost:3000

# Server Configuration (Optional - defaults will be used if not set)
NODE_ENV=development
PORT=5000

# Frontend Configuration (Optional - for custom API URL)
REACT_APP_API_URL=http://localhost:5000/api

# Map Configuration (Optional - for Serbian coordinates)
REACT_APP_MAP_CENTER_LAT=45.2671
REACT_APP_MAP_CENTER_LON=19.8335

# Development Settings (Optional - for better file watching in Docker)
CHOKIDAR_USEPOLLING=true
GENERATE_SOURCEMAP=false
